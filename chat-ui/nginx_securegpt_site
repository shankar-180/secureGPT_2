server {
    listen 443 ssl;
    server_name securegpt.accure.ai;

    ssl_certificate /home/accure/.ssl/X509.crt;
    ssl_certificate_key /home/accure/.ssl/accure.key;
    client_max_body_size 1024M;
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_buffering off;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_connect_timeout 10s; # Set the timeout for connecting to the upstream server to 10 seconds
        proxy_send_timeout 300s;    # Set the timeout for sending the request to the upstream server to 30 seconds
        proxy_read_timeout 300s;   # Set the timeout for reading the response from the upstream server to 5 minutes

    }
}